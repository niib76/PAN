{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.4",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "srcIPInboundNSG": {
      "type": "string",
      "defaultValue": "0.0.0.0/0"
    },
    "nsgName": {
      "type": "string",
      "defaultValue": "NSG-PAN-FW01-MGMT"
    },
    "vmName": {
      "type": "string",
      "defaultValue": "PAN-FW01"
    },
    "imageVersion": {
      "type": "string",
      "defaultValue": "latest"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS3_v2"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "VNET-PAN-FWs"
    },
    "virtualNetworkAddressPrefix": {
      "type": "string",
      "defaultValue": "10.255.252.0/22"
    },
    "subnet0Name": {
      "type": "string",
      "defaultValue": "SUB-PAN-MGMT"
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "SUB-PAN-EXT"
    },
    "subnet2Name": {
      "type": "string",
      "defaultValue": "SUB-PAN-INT"
    },
    "subnet0Prefix": {
      "type": "string",
      "defaultValue": "10.255.255.0/24"
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.255.252.0/24"
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.255.253.0/24"
    },
    "subnet0StartAddress": {
      "type": "string",
      "defaultValue": "10.255.255.4",
      "metadata": {
        "description": "Management subnet static address"
      }
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "publicIPAddressName": {
      "type": "string",
      "defaultValue": "PIP-PAN-FW-01-MGMT"
    }
  },
  "variables": {
    "imagePublisher": "paloaltonetworks",
    "imageOffer": "vmseries-flex",
    "imageSku": "byol",
    "nicPrefix": "[concat(parameters('vmName'), '-')]",
    "mgmtNic": "[concat(variables('nicPrefix'), 'MGMT-eth0')]",
    "extNic": "[concat(variables('nicPrefix'), 'EXT-eth1')]",
    "intNic": "[concat(variables('nicPrefix'), 'INT-eth2')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2019-11-01",
      "name": "[parameters('publicIPAddressName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard"
      },
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2019-11-01",
      "name": "[parameters('nsgName')]",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "Allow-Mgmt-From-Source",
            "properties": {
              "priority": 100,
              "access": "Allow",
              "direction": "Inbound",
              "protocol": "*",
              "sourceAddressPrefix": "[parameters('srcIPInboundNSG')]",
              "destinationAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationPortRange": "*"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2019-11-01",
      "name": "[parameters('virtualNetworkName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('virtualNetworkAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnet0Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet0Prefix')]"
            }
          },
          {
            "name": "[parameters('subnet1Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet1Prefix')]"
            }
          },
          {
            "name": "[parameters('subnet2Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet2Prefix')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-11-01",
      "name": "[variables('mgmtNic')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddressName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('subnet0StartAddress'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('nsgName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig-mgmt",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('subnet0StartAddress')]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnet0Name'))]"
              },
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIPAddressName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-11-01",
      "name": "[variables('extNic')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
      ],
      "properties": {
        "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "ipconfig-untrust",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnet1Name'))]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2019-11-01",
      "name": "[variables('intNic')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
      ],
      "properties": {
        "enableIPForwarding": true,
        "ipConfigurations": [
          {
            "name": "ipconfig-trust",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnet2Name'))]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2019-12-01",
      "name": "[parameters('vmName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('mgmtNic'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('extNic'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('intNic'))]"
      ],
      "plan": {
        "publisher": "[variables('imagePublisher')]",
        "product": "[variables('imageOffer')]",
        "name": "[variables('imageSku')]"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSku')]",
            "version": "[parameters('imageVersion')]"
          },
          "osDisk": {
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('mgmtNic'))]",
              "properties": {
                "primary": true
              }
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('extNic'))]"
            },
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('intNic'))]"
            }
          ]
        }
      }
    }
  ]
}
